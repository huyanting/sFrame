  "scripts": {
    "getVersion": "sh ./offline_tools/get_version.sh",
    "remove-dist": "sh ./offline_tools/remove_dist.sh",
    "all": "npm-run-all --parallel getVersion remove-dist node-inspector nodemon debug-watch",
    "build": "npm-run-all --parallel getVersion remove-dist release",
    "node-inspector": "node-inspector --web-port=5859",
    "eslint": "eslint app/index.js app/server/**/*.js --ext .js -c ./.eslintrc.json",
    "nodemon": "nodemon --watch ./app/server --watch ./app/views --watch ./app/index.js -e ejs,js,json,html --debug ./app/index.js",
    "start-server": "pm2 stop hyting_resource; NODE_ENV=dev pm2 start ./app/index.js --name hyting_resource;",
    "release": "NODE_ENV=prod webpack --progress -p",
    "debug-watch": "webpack --progress --watch"
  }
}
